@{
  Layout = "_Layout";
}

<body>
    <div class="container">
        <h1>List of Stylists</h1>
        @if (@Model.Count == 0)
        {
          <h3>No Stylists have been added yet!</h3>
        }
        <ol>
            @foreach (var stylist in Model)
            {
              <li><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></li>
            }
        </ol>
        <p><a href='/'>Back Home</a></p>
    </div>
</body>
